<h2>House</h2>
<ul class="list-group">
<% @hotmusic.each do |track| %>
<li class="list-group-item trackz">
<p class="pull-left"><%= image_tag track.artwork_url, :class => "smallthing" %></p>
<h5 class="tracktitle"><%= link_to "#{track.title}", track.permalink_url, :target => "_blank" %></h5>
<p class="pull-right"><%= link_to "Download", "#{track.permalink_url}/download", :class => "btn btn-primary", :target => "_self" %></p>
Artist: <%= link_to "#{track.user.username}", track.user.permalink_url, :target => "_blank" %>
<br>
Downloads: <%= track.download_count %>
<br>
<br>



<!-- <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=#{track.stream_url}"></iframe> -->
</li>
<% end %>
</ul>


