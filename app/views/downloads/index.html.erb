<a href="clearbin" class="btn btn-danger pull-right">Clear Bin</a>
<h2 style="color:#f6f6f6;">Your Download Bin</h2>
<ul class='list-group'>
  <% @downloads.each do |dl| %>

    <li class='list-group-item clearfix'>
    <small style="color:#33485F !important; margin: 0;"><%= time_ago_in_words dl.created_at %> ago</small>
    <br>
     <h4 class="pull-left" style="color:#33485F !important; margin: 10px 0;"><%= dl.title %></h4>
      <div class="pull-right"><%= link_to " Download", dl.url, :class=> "fa fa-download btn btn-info", :target=> "_blank" %></div>
      <br>
      <br>
      <br>
      <hr>
    </li>

  <% end %>
</ul>